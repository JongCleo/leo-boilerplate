{
  "compilerOptions": {
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true, // can use both require and import
    "target": "es6", // TODO: what should this be..
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".", // base directory to resolve non-relative module names
    "skipLibCheck": true, // means that it will not check the types of the libraries that are included in the project
    "allowJs": true, // source code can contains ts and js files
    "lib": ["es2015", "es2020"], // means that the project will use the features of ES2015 and ES2020
    "paths": {
      "*": ["node_modules/*"] // allows to use the import statement to import modules from the node_modules directory
    }
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
